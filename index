        }

        .voice-orb.listening ~ .orb-ring {
            border-color: var(--gray-600);
        }

        @keyframes ringPulse {
            0%, 100% { opacity: 0.3; transform: scale(1); }
            50% { opacity: 0.6; transform: scale(1.02); }
        }

        /* ═══════════════════════════════════════════
           WAVEFORM VISUALIZER
        ═══════════════════════════════════════════ */
        .waveform-container {
            position: absolute;
