            align-items: center;
            justify-content: center;
            pointer-events: none;
            opacity: 0;
            transition: opacity 0.3s;
        }

        .voice-orb.listening .waveform-container,
        .voice-orb.speaking .waveform-container {
            opacity: 1;
        }

        .waveform {
            display: flex;
