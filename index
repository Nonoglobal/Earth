<body>
    <!-- Intro Screen -->
    <div class="intro-screen" id="introScreen">
        <div class="intro-logo">FRIDAY</div>
        <div class="intro-line"></div>
        <div class="intro-subtitle">VOICE ASSISTANT</div>
    </div>

    <!-- Fullscreen Flash Effect -->
    <div class="fullscreen-flash" id="flash"></div>

    <!-- Main Container -->
    <div class="main-container">
        <!-- Status Header -->
        <div class="status-header">
            <div class="status-dot" id="statusDot"></div>
            <span class="status-text" id="statusText">CONNECTING</span>
        </div>

        <!-- Voice Orb -->
        <div class="voice-orb-container">
            <div class="voice-orb" id="voiceOrb" onclick="toggleVoice()">
                <!-- Mic Icon -->
                <svg class="mic-icon" id="micIcon" viewBox="0 0 24 24">
                    <path d="M12 14c1.66 0 3-1.34 3-3V5c0-1.66-1.34-3-3-3S9 3.34 9 5v6c0 1.66 1.34 3 3 3zm-1-9c0-.55.45-1 1-1s1 .45 1 1v6c0 .55-.45 1-1 1s-1-.45-1-1V5z"/>
                    <path d="M17 11c0 2.76-2.24 5-5 5s-5-2.24-5-5H5c0 3.53 2.61 6.43 6 6.92V21h2v-3.08c3.39-.49 6-3.39 6-6.92h-2z"/>
                </svg>

                <!-- Waveform -->
                <div class="waveform-container">
                    <div class="waveform">
                        <div class="wave-bar"></div>
                        <div class="wave-bar"></div>
                        <div class="wave-bar"></div>
                        <div class="wave-bar"></div>
                        <div class="wave-bar"></div>
                        <div class="wave-bar"></div>
                        <div class="wave-bar"></div>
                        <div class="wave-bar"></div>
                        <div class="wave-bar"></div>
                    </div>
                </div>
            </div>
            <div class="orb-ring orb-ring-1"></div>
            <div class="orb-ring orb-ring-2"></div>
        </div>

        <!-- Text Display -->
        <div class="text-display">
            <div class="transcript" id="transcript"></div>
            <div class="thinking-dots" id="thinkingDots">
                <div class="thinking-dot"></div>
                <div class="thinking-dot"></div>
                <div class="thinking-dot"></div>
            </div>
            <div class="response" id="response"></div>
        </div>

        <!-- Bottom Controls -->
        <div class="bottom-controls">
            <button class="control-btn" onclick="toggleTextInput()" title="Text eingeben">
                <svg viewBox="0 0 24 24">
                    <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z"/>
                </svg>
            </button>
            <button class="control-btn" onclick="clearHistory()" title="Verlauf löschen">
                <svg viewBox="0 0 24 24">
                    <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"/>
                </svg>
            </button>
        </div>

        <!-- Text Input (Hidden by default) -->
        <div class="text-input-container" id="textInputContainer">
            <input type="text" class="text-input" id="textInput" placeholder="Nachricht eingeben..." onkeypress="handleKeyPress(event)">
            <button class="send-btn" onclick="sendTextMessage()">SENDEN</button>
        </div>
    </div>

    <script>
        // ═══════════════════════════════════════════════════════════════
        // CONFIGURATION
        // ═══════════════════════════════════════════════════════════════
        
        const FRIDAY_SERVER = 'https://server-production-7ba8.up.railway.app';
        
        // ═══════════════════════════════════════════════════════════════
        // STATE
        // ═══════════════════════════════════════════════════════════════
        
        let isConnected = false;
        let isListening = false;
        let isSpeaking = false;
        let recognition = null;
        let synthesis = window.speechSynthesis;
        
        // ═══════════════════════════════════════════════════════════════
        // ELEMENTS
        // ═══════════════════════════════════════════════════════════════
        
        const elements = {
            introScreen: document.getElementById('introScreen'),
            flash: document.getElementById('flash'),
            statusDot: document.getElementById('statusDot'),
            statusText: document.getElementById('statusText'),
            voiceOrb: document.getElementById('voiceOrb'),
            micIcon: document.getElementById('micIcon'),
            transcript: document.getElementById('transcript'),
            thinkingDots: document.getElementById('thinkingDots'),
            response: document.getElementById('response'),
            textInputContainer: document.getElementById('textInputContainer'),
            textInput: document.getElementById('textInput')
        };

        // ═══════════════════════════════════════════════════════════════
        // INITIALIZATION
        // ═══════════════════════════════════════════════════════════════
        
        async function init() {
            // Remove intro after animation
            setTimeout(() => {
                elements.introScreen.style.display = 'none';
            }, 3500);

            // Check connection
            await checkConnection();
            
            // Setup speech recognition
            setupSpeechRecognition();

            // Add click ripple effect to body
            document.body.addEventListener('click', createRipple);
        }

        async function checkConnection() {
            try {
                const response = await fetch(`${FRIDAY_SERVER}/health`);
                if (response.ok) {
                    setStatus('online', 'ONLINE');
                    isConnected = true;
                } else {
                    throw new Error('Server not responding');
                }
            } catch (error) {
                console.error('Connection error:', error);
                setStatus('offline', 'OFFLINE');
                isConnected = false;
                setTimeout(checkConnection, 5000);
            }
        }

        function setStatus(status, text) {
            elements.statusDot.className = 'status-dot ' + status;
            elements.statusText.textContent = text;
        }

        // ═══════════════════════════════════════════════════════════════
        // RIPPLE EFFECT
        // ═══════════════════════════════════════════════════════════════
        
        function createRipple(e) {
            const ripple = document.createElement('div');
            ripple.className = 'ripple';
            ripple.style.left = e.clientX + 'px';
            ripple.style.top = e.clientY + 'px';
            ripple.style.width = '100px';
            ripple.style.height = '100px';
            ripple.style.marginLeft = '-50px';
            ripple.style.marginTop = '-50px';
            document.body.appendChild(ripple);
            
            setTimeout(() => ripple.remove(), 600);
        }

        function triggerFlash() {
            elements.flash.classList.add('active');
            setTimeout(() => elements.flash.classList.remove('active'), 300);
        }

        // ═══════════════════════════════════════════════════════════════
        // SPEECH RECOGNITION
        // ═══════════════════════════════════════════════════════════════
        
        function setupSpeechRecognition() {
            if (!('webkitSpeechRecognition' in window) && !('SpeechRecognition' in window)) {
                console.log('Speech recognition not supported');
                return;
            }

            const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            recognition = new SpeechRecognition();
            recognition.lang = 'de-DE';
            recognition.continuous = false;
            recognition.interimResults = true;

            recognition.onstart = () => {
                isListening = true;
                elements.voiceOrb.classList.add('listening');
                elements.micIcon.style.display = 'none';
                setStatus('listening', 'LISTENING');
                elements.transcript.textContent = '';
                elements.transcript.classList.add('visible');
                elements.response.classList.remove('visible');
                triggerFlash();
            };

            recognition.onresult = (event) => {
                const transcript = Array.from(event.results)
                    .map(result => result[0].transcript)
                    .join('');
                
                elements.transcript.textContent = `"${transcript}"`;

                if (event.results[0].isFinal) {
                    stopListening();
                    if (transcript.trim()) {
                        processMessage(transcript);
                    }
                }
            };

            recognition.onerror = (event) => {
                console.error('Speech recognition error:', event.error);
                stopListening();
            };

            recognition.onend = () => {
                if (isListening) {
                    stopListening();
                }
            };
        }

        function toggleVoice() {
            if (!recognition) {
                alert('Spracherkennung wird nicht unterstützt.');
                return;
            }

            if (isSpeaking) {
                synthesis.cancel();
                isSpeaking = false;
                elements.voiceOrb.classList.remove('speaking');
            }

            if (isListening) {
                stopListening();
            } else {
                startListening();
            }
        }

        function startListening() {
            if (synthesis.speaking) {
                synthesis.cancel();
            }
            
            try {
                recognition.start();
            } catch (e) {
                console.error('Could not start recognition:', e);
            }
        }

        function stopListening() {
            isListening = false;
            elements.voiceOrb.classList.remove('listening');
            elements.micIcon.style.display = 'block';
            if (isConnected) setStatus('online', 'ONLINE');
            
            try {
                recognition.stop();
            } catch (e) {}
        }

        // ═══════════════════════════════════════════════════════════════
        // TEXT-TO-SPEECH
        // ═══════════════════════════════════════════════════════════════
        
        function speak(text) {
            if (!synthesis) return;
            
            synthesis.cancel();
            
            const utterance = new SpeechSynthesisUtterance(text);
            utterance.lang = 'de-DE';
            utterance.rate = 1.0;
            utterance.pitch = 1.1;
            
            // Find a good German voice
            const voices = synthesis.getVoices();
            const germanVoice = voices.find(v => v.lang.startsWith('de') && v.name.includes('Female')) ||
                               voices.find(v => v.lang.startsWith('de'));
            if (germanVoice) {
                utterance.voice = germanVoice;
            }
            
            utterance.onstart = () => {
                isSpeaking = true;
                elements.voiceOrb.classList.add('speaking');
            };

            utterance.onend = () => {
                isSpeaking = false;
                elements.voiceOrb.classList.remove('speaking');
            };
            
            synthesis.speak(utterance);
        }

        // Load voices
        if (synthesis) {
            synthesis.onvoiceschanged = () => synthesis.getVoices();
        }

        // ═══════════════════════════════════════════════════════════════
        // MESSAGE PROCESSING
        // ═══════════════════════════════════════════════════════════════
        
        async function processMessage(text) {
            // Show thinking
            elements.thinkingDots.classList.add('visible');
            setStatus('online', 'THINKING');
            
            try {
                const response = await fetch(`${FRIDAY_SERVER}/api/message`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ text, userId: 'friday-user' })
                });
                
                const data = await response.json();
                
                elements.thinkingDots.classList.remove('visible');
                setStatus('online', 'ONLINE');
                
                if (data.success && data.message) {
                    showResponse(data.message);
                    speak(data.message);
                } else {
                    showResponse(data.error || 'Es tut mir leid, ich konnte das nicht verarbeiten.');
                }
                
            } catch (error) {
                console.error('Error:', error);
                elements.thinkingDots.classList.remove('visible');
                setStatus('online', 'ONLINE');
                showResponse('Verbindungsfehler. Bitte versuche es erneut.');
            }
        }

        function showResponse(text) {
            elements.response.textContent = text;
            elements.response.classList.add('visible');
            triggerFlash();
        }

        // ═══════════════════════════════════════════════════════════════
        // TEXT INPUT
        // ═══════════════════════════════════════════════════════════════
        
        function toggleTextInput() {
            elements.textInputContainer.classList.toggle('visible');
            if (elements.textInputContainer.classList.contains('visible')) {
                elements.textInput.focus();
            }
        }

        function handleKeyPress(event) {
            if (event.key === 'Enter') {
                sendTextMessage();
            }
        }

        function sendTextMessage() {
            const text = elements.textInput.value.trim();
            if (!text) return;
            
            elements.textInput.value = '';
            elements.transcript.textContent = `"${text}"`;
            elements.transcript.classList.add('visible');
            elements.response.classList.remove('visible');
            
            processMessage(text);
        }

        function clearHistory() {
            elements.transcript.textContent = '';
            elements.transcript.classList.remove('visible');
            elements.response.textContent = '';
            elements.response.classList.remove('visible');
            triggerFlash();
        }

        // ═══════════════════════════════════════════════════════════════
        // INIT
        // ═══════════════════════════════════════════════════════════════
        
        init();
    </script>
</body>
</html>
